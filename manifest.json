{
  "manifest_version": 3,
  "name": "Zoom Video Download Helper",
  "version": "1.0",
  "description": "Adds a 'Download me' link for Zoom videos and restores right-click functionality.",
  "icons": {
    "48": "icon.png"
  },
  "permissions": ["scripting"],
  "host_permissions": [
    "*://*.zoom.us/*"
  ],
  "content_scripts": [
    {
      "matches": ["*://*.zoom.us/*"],
      "js": ["content.js"],
      "run_at": "document_idle"
    }
  ]
}
